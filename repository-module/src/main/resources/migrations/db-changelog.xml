<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="viktar.kaminski@gmail.com" id="ROLE_TABLE_1">
        <createTable tableName="Role">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="viktar.kaminski@gmail.com" id="USER_TABLE_1">
        <createTable tableName="User">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(40)">
                <constraints nullable="false"/>
            </column>
            <column name="patronymic" type="VARCHAR(40)"/>
            <column name="email" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints foreignKeyName="fk_user_role" references="Role(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="viktar.kaminski@gmail.com" id="FEEDBACK_STATUS_TABLE_1">
        <createTable tableName="Feedback_status">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="viktar.kaminski@gmail.com" id="FEEDBACK_TABLE_1">
        <createTable tableName="Feedback">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints foreignKeyName="fk_feedback_user" references="User(id)"/>
            </column>
            <column name="content" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="status_id" type="BIGINT">
                <constraints foreignKeyName="fk_feedback_status" references="Feedback_status(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>